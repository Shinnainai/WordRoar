<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchCardsActivity">

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Home Button"
        android:src="@drawable/ic_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintBottom_toTopOf="@id/word_match_desc"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="75dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_button"
        app:layout_constraintEnd_toStartOf="@id/word_match_title"
        app:layout_constraintBottom_toTopOf="@id/word_match_desc"/>

    <TextView
        android:id="@+id/word_match_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match Words"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/word_match_desc"/>

    <TextView
        android:id="@+id/word_match_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:textSize="25sp"
        android:text="Select a card and record yourself saying it!"
        app:layout_constraintTop_toBottomOf="@id/word_match_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card3"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/word_match_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card2"
        app:layout_constraintBottom_toTopOf="@id/card6">

        <ImageView
            android:id="@+id/match_cards_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card1tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/word_match_desc"
        app:layout_constraintStart_toEndOf="@id/card1"
        app:layout_constraintEnd_toStartOf="@id/card3"
        app:layout_constraintBottom_toTopOf="@id/card7">

        <ImageView
            android:id="@+id/match_cards_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card2tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@id/card8"
        app:layout_constraintEnd_toStartOf="@id/card4"
        app:layout_constraintStart_toEndOf="@id/card2"
        app:layout_constraintTop_toBottomOf="@id/word_match_desc">

        <ImageView
            android:id="@+id/match_cards_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card3tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card4"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/word_match_desc"
        app:layout_constraintStart_toEndOf="@id/card3"
        app:layout_constraintEnd_toStartOf="@id/card5"
        app:layout_constraintBottom_toTopOf="@id/card9">

        <ImageView
            android:id="@+id/match_cards_img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card4tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card5"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/word_match_desc"
        app:layout_constraintStart_toEndOf="@id/card4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card10">

        <ImageView
            android:id="@+id/match_cards_img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card5tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card6"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card7"
        app:layout_constraintBottom_toTopOf="@id/match_cards_listen_button">

        <ImageView
            android:id="@+id/match_cards_img6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card6tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card7"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintStart_toEndOf="@id/card6"
        app:layout_constraintEnd_toStartOf="@id/card8"
        app:layout_constraintBottom_toTopOf="@id/match_cards_listen_button">

        <ImageView
            android:id="@+id/match_cards_img7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card7tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card8"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@id/match_cards_record_button"
        app:layout_constraintEnd_toStartOf="@id/card9"
        app:layout_constraintStart_toEndOf="@id/card7"
        app:layout_constraintTop_toBottomOf="@id/card3">

        <ImageView
            android:id="@+id/match_cards_img8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card8tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card9"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/card4"
        app:layout_constraintStart_toEndOf="@id/card8"
        app:layout_constraintEnd_toStartOf="@id/card10"
        app:layout_constraintBottom_toTopOf="@id/match_cards_record_button">

        <ImageView
            android:id="@+id/match_cards_img9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card9tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card10"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/card5"
        app:layout_constraintStart_toEndOf="@id/card9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/match_cards_record_button">

        <ImageView
            android:id="@+id/match_cards_img10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card10tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

<Button
    android:id="@+id/match_cards_listen_button"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:text="Hear Word"
    app:layout_constraintTop_toBottomOf="@id/card7"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/match_cards_record_button" />

<Button
    android:id="@+id/match_cards_record_button"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:text="Record Word"
    app:layout_constraintTop_toBottomOf="@id/card9"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/match_cards_listen_button"
    app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>